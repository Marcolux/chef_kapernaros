{

  
  "compilerOptions": {
    "target": "es6",                 // Set target JavaScript version
    "module": "commonjs",            // Use commonjs module system
    "moduleResolution": "node",      // Use Node.js module resolution strategy
    "outDir": "./dist",              // Output directory for compiled files
    "esModuleInterop": true,         // Enables interoperability between CommonJS and ES Modules
    "strict": true,                  // Enable all strict type-checking options
    "types": ["node"],               // Include Node.js type definitions
  },
  "include": ["chef-kapernaros/"],           // Files to be included in compilation
  "exclude": ["node_modules"]        // Directories to exclude from compilation
}
